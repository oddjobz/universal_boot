menuentry "{{ title }}" {
    iso_path="/boot/iso/{{ filename }}"
    export iso_path
    loopback loop "$iso_path"
    set imgfile=($loop)/live/filesystem.squashfs
    loopback loop0 /$imgfile
    linux (loop0)/boot/vmlinuz root=$imgfile boot=live config nopersistence noprompt timezone=Etc/UTC noautologin module=Tails slab_nomerge slub_debug=FZP mce=0 vsyscall=none page_poison=1 init_on_free=1 mds=full,nosmt  noapic noapm nodma nomce nolapic nomodeset nosmp vga=normal intel_iommu=off --
    initrd (loop0)/boot/initrd.img
    loopback --delete loop0
    loopback --delete loop
}