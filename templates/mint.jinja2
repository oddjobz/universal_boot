menuentry "{{ title }}" {
      iso_path="/boot/iso/{{ filename }}"
      export iso_path
      img_path="/dev/disk/by-label/MP-DATA"
      search --set=root --file "$iso_path"
      loopback loop "$iso_path"
      root=(loop)
      linux (loop)/casper/vmlinuz img_dev=$img_path boot=casper username=mint hostname=mint initrd=/casper/initrd.lz live-media-path=/casper/ ignore_uuid --
      initrd (loop)/casper/initrd.lz
      loopback --delete loop
}